<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.Eparking.dao.PriceMethodMapper">

    <select id="getPriceMethodByReservationID" resultType="com.project.Eparking.domain.PriceMethod">
        SELECT priceReservationID,reservationID,total,method1,method2,method3
        FROM pricemethodreservation
        WHERE reservationID = #{reservationID}
    </select>
    <update id="updateTotalPrice" parameterType="com.project.Eparking.domain.PriceMethod">
        UPDATE pricemethodreservation
        SET total = #{total}
        WHERE reservationID = #{reservationID}
    </update>

    <insert id="create" parameterType="com.project.Eparking.domain.PriceMethod">
        INSERT INTO
            pricemethodreservation
        (
            reservationID,
            method1,
            method2,
            method3
        )
        VALUES
        (
            #{reservationID},
            #{method1},
            #{method2},
            #{method3}
        );
    </insert>
</mapper>